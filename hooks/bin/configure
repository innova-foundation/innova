#!/bin/sh -e

err () {
    echo "$1" >&2
}


DATA_DIR="$SNAP_USER_COMMON"
CONFIG="$DATA_DIR/innova.conf"

#check if file exists & create template if not
if [[ -f "$CONFIG" ]]; then
  EXISTS=1
else
  PORT=14530
  RPCPORT=14531
  RPCUSER=$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 32 | head -n 1)
  RPCPASS=$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 32 | head -n 1)
  echo "port=$PORT" > $CONFIG
  echo "rpcuser=$RPCUSER" >> $CONFIG
  echo "rpcpassword=$RPCPASS" >> $CONFIG
  echo "rpcport=$RPCPORT" >> $CONFIG
  echo "collateralnode=0" >> $CONFIG
  echo "collateralnodeaddr=$COLLATERALSTAKEADDR" >> $CONFIG
  echo "collateralnodeprivkey=$COLLATERALSTAKEPRIVKEY" >> $CONFIG
  echo "daemon=1" >> $CONFIG
fi

# Obtain values from input
port="$(snapctl get port)"
rpcport="$(snapctl get rpcport)"
user="$(snapctl get user)"
pass="$(snapctl get pass)"
collateralnode="$(snapctl get collateralnode)"
collateralnodeaddr="$(snapctl get collateralnodeaddr)"
collateralnodeprivkey="$(snapctl get collateralnodeprivkey)"

# Obtain values from current config
cport=$(cat $CONFIG | grep '^port' | cut -d'=' -f2)
crpcport=$(cat $CONFIG | grep 'rpcport' | cut -d'=' -f2)
crpcuser=$(cat $CONFIG | grep 'rpcusername' | cut -d'=' -f2)
crpcpass=$(cat $CONFIG | grep 'rpcpass' | cut -d'=' -f2)
ccollateralnode=$(cat $CONFIG | grep 'collateralnode=' | cut -d'=' -f2)
ccollateralnodeaddr=$(cat $CONFIG | grep 'collateralnodeaddr' | cut -d'=' -f2)
ccollateralnodeprivkey=$(cat $CONFIG | grep 'collateralnodeprivkey' | cut -d'=' -f2)

# Check for blank values in config file & error if not given as well
if [[ -z "$cport" ] && [ -z "$port" ]; then
    err "port is not set."
    exit 1
fi
if [[ -z "$crpcport" ] && [ -z "$rpcport" ]; then
    err "rpcport is not set."
    exit 1
fi
if [[ -z "$crpcuser" ] && [ -z "$rpcuser" ]; then
    err "rpcuser is not set."
    exit 1
fi
if [[ -z "$crpcpass" ] && [ -z "$rpcpass" ]; then
    err "rpcpass is not set."
    exit 1
fi

# Set the stuff with no validation because we're baller like that
if [ -n "$port" ]; then
    sed -i "s/^port=.*/port=$port/g" "$CONFIG"
    echo "set port to $port\n"
fi
if [ -n "$rpcport" ]; then
    sed -i "s/^rpcport=.*/rpcport=$rpcport/g" "$CONFIG"
    echo "set rpcport to $rpcport\n"
fi
if [ -n "$rpcpass" ]; then
    sed -i "s/^rpcpass=.*/rpcpass=$rpcpass/g" "$CONFIG"
    echo "set rpcpass to $rpcpass\n"
fi
if [ -n "$rpcuser" ]; then
    sed -i "s/^rpcuser=.*/rpcuser=$rpcuser/g" "$CONFIG"
    echo "set rpcuser to $rpcuser\n"
fi
if [ -n "$collateralnode" ]; then
    sed -i "s/^collateralnode=.*/collateralnode=$collateralnode/g" "$CONFIG"
    echo "set collateralnode to $collateralnode\n"
fi
if [ -n "$collateralnodeaddr" ]; then
    sed -i "s/^collateralnodeaddr=.*/collateralnodeaddr=$collateralnodeaddr/g" "$CONFIG"
    echo "set collateralnodeaddr to $collateralnodeaddr\n"
fi
if [ -n "$collateralnodeprivkey" ]; then
    sed -i "s/^collateralnodeprivkey=.*/collateralnodeprivkey=$collateralnodeprivkey/g" "$CONFIG"
    echo "set collateralnodeprivkey to $collateralnodeprivkey\n"
fi

exit 0
